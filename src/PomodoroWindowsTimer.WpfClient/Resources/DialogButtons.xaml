<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    >

    <Style x:Key="PomodoroDialogButton"
           BasedOn="{StaticResource MaterialDesignFlatButton}"
           TargetType="Button"
           >
        <Setter Property="Command" Value="{x:Static materialDesign:DialogHost.CloseDialogCommand}" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="PomodoroOkDialogButton"
           BasedOn="{StaticResource PomodoroDialogButton}"
           TargetType="Button"
           >
        <Setter Property="CommandParameter">
            <Setter.Value>
                <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                    True
                </system:Boolean>
            </Setter.Value>
        </Setter>
        <Setter Property="IsDefault" Value="True" />
    </Style>

    <Style x:Key="PomodoroCancelDialogButton"
           BasedOn="{StaticResource PomodoroDialogButton}"
           TargetType="Button"
           >
        <Setter Property="CommandParameter">
            <Setter.Value>
                <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                    False
                </system:Boolean>
            </Setter.Value>
        </Setter>
        <Setter Property="IsCancel" Value="True" />
    </Style>

</ResourceDictionary>