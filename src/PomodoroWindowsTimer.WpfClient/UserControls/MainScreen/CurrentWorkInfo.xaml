<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.MainScreen.CurrentWorkInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.MainScreen"
             d:DesignHeight="100"
             d:DesignWidth="800"
             mc:Ignorable="d"
             >
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="1,0,0,5"
                   Foreground="#EEEEEE"
                   Text="{Binding Number,
                                  Converter={StaticResource conv_NoNumberConverter},
                                  FallbackValue='DEV-0001'}"
                   FontSize="11"
                   FontWeight="Normal"
                   />
        <TextBlock MaxWidth="500"
                   Margin="0,0,0,14"
                   Foreground="#EEEEEE"
                   Text="{Binding Title,
                                  FallbackValue='[DEV-0001] Task title and description multilined'}"
                   TextWrapping="Wrap"
                   FontSize="18"
                   />
    </StackPanel>
</UserControl>
