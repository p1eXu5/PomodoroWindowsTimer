<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.MainScreen.Timer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:PlayerModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.PlayerModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:conv="clr-namespace:PomodoroWindowsTimer.WpfClient.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:digitPanel="clr-namespace:p1eXu5.Wpf.DigitPanel;assembly=p1eXu5.Wpf.DigitPanel"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.MainScreen"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="m_TimerRoot"
             d:DataContext="{d:DesignInstance Type=PlayerModel:Bindings,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="250"
             d:DesignWidth="800"
             d:Foreground="{StaticResource MaterialDesign.Brush.Primary}"
             mc:Ignorable="d"
             >
    <!--<UserControl.Resources>
        <conv:BooleansToDigitWidthConverter x:Key="conv_BooleansToDigitWidth" />
    </UserControl.Resources>-->

    <DockPanel LastChildFill="True">
        <!--  current TimePoint name  -->
        <TextBlock DockPanel.Dock="Top"
                   Margin="1,0,0,20"
                   Foreground="{Binding ElementName=m_TimerRoot, Path=Foreground}"
                   Text="{Binding ActiveTimePointName, FallbackValue='Time Point Name'}"
                   />

        <!--  slider  -->
        <Slider DockPanel.Dock="Bottom"
                Margin="0,40,0,0"
                Foreground="{Binding ElementName=m_TimerRoot, Path=Foreground}"
                IsEnabled="{Binding CanShiftActiveTime}"
                Maximum="{Binding ActiveTimeDuration}"
                Minimum="0"
                Orientation="Horizontal"
                PreviewMouseDown="Slider_PreChangeActiveTimeSpanCommand"
                PreviewMouseUp="Slider_PostChangeActiveTimeSpanCommand"
                Value="{Binding ActiveTimeSeconds}"
                />

        <Viewbox Stretch="Uniform">


            <!--  timer table  -->
            <digitPanel:TimerTable HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   Background="{Binding ElementName=m_TimerRoot, Path=Background}"
                                   DigitBackground="{Binding ElementName=m_TimerRoot, Path=DigitBackground}"
                                   DigitWidth="100"
                                   Foreground="{Binding ElementName=m_TimerRoot, Path=Foreground}"
                                   Format="mm':'ss"
                                   Value="{Binding ActiveTime, FallbackValue=00:00:00.00}"
                                   >
                <!--<digitPanel:TimerTable.Style>
                <Style TargetType="digitPanel:TimerTable">
                    <Setter Property="DigitWidth">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource conv_BooleansToDigitWidth}"
                                          Mode="OneTime"
                                          >
                                <Binding Path="DataContext.IsTimePointsShown"
                                         RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                         AncestorType=Window}"
                                         />
                                <Binding Path="DataContext.IsWorkSelectorLoaded"
                                         RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                         AncestorType=Window}"
                                         />
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding DataContext.IsTimePointsShown, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" Value="False" />
                                <Condition Binding="{Binding DataContext.IsWorkSelectorLoaded, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" Value="False" />
                            </MultiDataTrigger.Conditions>
