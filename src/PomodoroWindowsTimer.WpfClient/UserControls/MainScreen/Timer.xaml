<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.MainScreen.Timer"
             x:Name="m_TimerRoot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.MainScreen"
             xmlns:digitPanel="clr-namespace:p1eXu5.Wpf.DigitPanel;assembly=p1eXu5.Wpf.DigitPanel"
             xmlns:conv="clr-namespace:PomodoroWindowsTimer.WpfClient.Converters"
             xmlns:PlayerModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.PlayerModel;assembly=PomodoroWindowsTimer.ElmishApp"
             d:DataContext="{d:DesignInstance Type=PlayerModel:Bindings, IsDesignTimeCreatable=False}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <conv:BooleansToDigitWidthConverter x:Key="conv_BooleansToDigitWidth" />
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <!--  current TimePoint name  -->
        <TextBlock Margin="1,0,0,20"
                   Foreground="{Binding ElementName=m_TimerRoot,
                                        Path=Foreground}"
                   Text="{Binding ActiveTimePointName,
                                  FallbackValue='Time Point Name'}"
                   />

        <!--  timer table  -->
        <digitPanel:TimerTable HorizontalAlignment="Stretch"
                               VerticalAlignment="Center"
                               DigitBackground="{Binding ElementName=m_TimerRoot,
                                                         Path=DigitBackground}"
                               Foreground="{Binding ElementName=m_TimerRoot,
                                                    Path=Foreground}"
                               Background="{Binding ElementName=m_TimerRoot,
                                                    Path=Background}"
                               Format="mm':'ss"
                               Value="{Binding ActiveTime,
                                               FallbackValue=00:00:00.00}"
                               >
            <digitPanel:TimerTable.Style>
                <Style TargetType="digitPanel:TimerTable">
                    <Setter Property="DigitWidth">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource conv_BooleansToDigitWidth}"
                                          Mode="OneTime"
                                          >
                                <Binding Path="DataContext.IsTimePointsShown"
                                         RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                         AncestorType=Window}"
                                         />
                                <Binding Path="DataContext.IsWorkSelectorLoaded"
                                         RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                         AncestorType=Window}"
                                         />
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding DataContext.IsTimePointsShown, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" Value="False" />
                                <Condition Binding="{Binding DataContext.IsWorkSelectorLoaded, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="DigitWidth"
                                                         To="100"
                                                         Duration="0:0:0.35"
                                                         />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.EnterActions>
                            <MultiDataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="DigitWidth"
                                                         To="75"
                                                         Duration="0:0:0.35"
                                                         />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.ExitActions>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </digitPanel:TimerTable.Style>
        </digitPanel:TimerTable>

        <!--  slider  -->
        <Slider DockPanel.Dock="Top"
                Margin="0,40,0,0"
                Foreground="{Binding ElementName=m_TimerRoot,
                                     Path=Foreground}"
                IsEnabled="{Binding IsActiveTimePointSet}"
                Maximum="{Binding ActiveTimeDuration}"
                Minimum="0"
                Orientation="Horizontal"
                PreviewMouseDown="Slider_PreChangeActiveTimeSpanCommand"
                PreviewMouseUp="Slider_PostChangeActiveTimeSpanCommand"
                Value="{Binding ActiveTimeSeconds}"
                />
    </StackPanel>
</UserControl>
