<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer.RunningTimePoints"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:RunningTimePointListModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.RunningTimePointListModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Shared"
             d:DataContext="{d:DesignInstance Type=RunningTimePointListModel:IBindings,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="150"
             d:DesignWidth="800"
             mc:Ignorable="d"
             >
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                    CommandParameter="{x:Static Dock.Left}"
                    Content="{materialDesign:PackIcon ArrowLeft}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    />
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        >
                <TextBlock Margin="10,16"
                           HorizontalAlignment="Center"
                           Style="{StaticResource MaterialDesignButtonTextBlock}"
                           Text="TIME POINTS"
                           />
                <Button DockPanel.Dock="Left"
                        Command="{Binding RequestTimePointGeneratorCommand}"
                        Content="{materialDesign:PackIcon TimerEditOutline}"
                        Style="{StaticResource st_MenuButton}"
                        ToolTip="Playlist"
                        />
            </StackPanel>
        </Grid>

        <!--  time points  -->
        <shared:TimePointList HorizontalAlignment="Stretch"
                              DataContext="{Binding TimePoints}"
                              SearchToolbarVisibility="Collapsed"
                              TimePointListBoxItemTemplate="{StaticResource dt_PlaylistTimePointV2}"
                              TimePointListBoxScrollBarVisibility="Auto"
                              />
    </DockPanel>
</UserControl>
