<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer.TimePointsDrawer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:MainModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.MainModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:TimePointsDrawerModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.TimePointsDrawerModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             MinWidth="350"
             HorizontalAlignment="Stretch"
             TextElement.Foreground="{StaticResource MaterialDesignBody}"
             d:DataContext="{d:DesignInstance Type=MainModel:IBindings,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="250"
             d:DesignWidth="300"
             mc:Ignorable="d"
             >
    <!--  content  -->
    <ContentControl Content="{Binding TimePointsDrawer}">
        <ContentControl.Style>
            <Style TargetType="ContentControl">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding TimePointsDrawer.IsRunningTimePointListLoaded}"
                                 Value="True"
                                 >
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate DataType="{x:Type TimePointsDrawerModel:IBindings}">
                                    <DockPanel DataContext="{Binding RunningTimePointList}"
                                               LastChildFill="True"
                                               >
                                        <local:PlayerSettings DockPanel.Dock="Bottom"
                                                              DataContext="{Binding}"
                                                              />

                                        <local:RunningTimePoints DockPanel.Dock="Top"
                                                                 DataContext="{Binding}"
                                                                 />
                                    </DockPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding TimePointsDrawer.IsTimePointsGeneratorLoaded}"
                                 Value="True"
                                 >
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate DataType="{x:Type TimePointsDrawerModel:IBindings}">
                                    <DockPanel LastChildFill="True">
                                        <local:TimePointsGenerator DataContext="{Binding TimePointsGenerator}" />
                                    </DockPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ContentControl.Style>
    </ContentControl>

</UserControl>
