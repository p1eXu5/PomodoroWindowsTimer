<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer.TimePointsDrawer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:MainModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.MainModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=MainModel:Bindings, IsDesignTimeCreatable=False}"
             MinWidth="350"
             HorizontalAlignment="Stretch"
             d:DesignHeight="250"
             d:DesignWidth="300"
             TextElement.Foreground="{StaticResource MaterialDesignBody}"
             mc:Ignorable="d"
             >
    <!--  content  -->
    <DockPanel LastChildFill="True">
        <!--  PlayerModel flags  -->
        <local:PlayerSettings DockPanel.Dock="Bottom"
                              DataContext="{Binding Player}"
                              />

        <local:RunningTimePoints DockPanel.Dock="Top"
                                 DataContext="{Binding TimePointList}"
                                 />
    </DockPanel>
</UserControl>
