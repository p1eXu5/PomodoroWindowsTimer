<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer.TimePointsGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:TimepPointsGenerator="clr-namespace:PomodoroWindowsTimer.ElmishApp.TimePointsGeneratorModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Shared"
             d:DataContext="{d:DesignInstance Type=TimepPointsGenerator:IBindings,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             >
    <!--  Prototype section  -->
    <DockPanel Grid.Row="0"
               Grid.Column="0"
               Margin="16"
               Grid.IsSharedSizeScope="True"
               LastChildFill="True"
               >
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                    CommandParameter="{x:Static Dock.Left}"
                    Content="{materialDesign:PackIcon ArrowLeft}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    />
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        >
                <TextBlock Margin="10,16"
                           HorizontalAlignment="Center"
                           Style="{StaticResource MaterialDesignButtonTextBlock}"
                           Text="TIME POINTS GENERATOR"
                           />
            </StackPanel>
        </Grid>

        <!--  Patterns combo box  -->
        <Border x:Name="m_PatternsSection"
                DockPanel.Dock="Top"
                Margin="0,10,0,0"
                Padding="10,10,10,16"
                Background="{StaticResource MaterialDesignToolBarBackground}"
                >
            <StackPanel>
                <TextBlock DockPanel.Dock="Top"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Style="{StaticResource MaterialDesignOverlineTextBlock}"
                           Text="Pattern:"
                           />
                <ComboBox DockPanel.Dock="Bottom"
                          Width="250"
                          IsEditable="True"
                          IsTextSearchEnabled="True"
                          ItemsSource="{Binding Patterns}"
                          SelectedIndex="{Binding SelectedPatternIndex}"
                          Text="{Binding SelectedPattern, UpdateSourceTrigger=PropertyChanged}"
                          />
            </StackPanel>
        </Border>

        <!--  buttons  -->
        <Border DockPanel.Dock="Bottom"
                Height="{Binding ElementName=m_PatternsSection, Path=ActualHeight}"
                Margin="0,10,0,0"
                >
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        >
                <!--  CLOSE button  -->
                <Button HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Right}"
                        Content="CLOSE"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        />
                <!--  APPLY button  -->
                <Button HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding ApplyCommand}"
                        Content="APPLY"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        >
                    <Button.CommandParameter>
                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                            True
                        </system:Boolean>
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
        </Border>
        <!--  Prototype list  -->
        <shared:TimePointList HorizontalAlignment="Stretch"
                              DataContext="{Binding TimePoints}"
                              Header="PROTOTYPES"
                              SearchToolbarVisibility="Collapsed"
                              TimePointListBoxItemTemplate="{StaticResource dt_EditableTimePoint}"
                              TimePointListBoxScrollBarVisibility="Hidden"
                              />
    </DockPanel>
</UserControl>
