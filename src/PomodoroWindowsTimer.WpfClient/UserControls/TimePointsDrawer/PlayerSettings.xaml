<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer.PlayerSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             >
    <StackPanel>
        <!--  Disable skip break  -->
        <StackPanel Margin="10,0"
                    Orientation="Horizontal"
                    >
            <ToggleButton Focusable="False"
                          IsChecked="{Binding DisableSkipBreak}"
                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                          ToolTip="Disable skip break"
                          >
                <ToggleButton.RenderTransform>
                    <ScaleTransform CenterX="20" CenterY="18" ScaleX=".6" ScaleY="0.6" />
                </ToggleButton.RenderTransform>
            </ToggleButton>
            <TextBlock Margin="0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"
                       FontSize="12"
                       Style="{StaticResource MaterialDesignOverlineTextBlock}"
                       Text="Disable skip break"
                       />
        </StackPanel>

        <!--  Disable minimize/maximize windows  -->
        <StackPanel Margin="10,0"
                    Orientation="Horizontal"
                    >
            <ToggleButton Focusable="False"
                          IsChecked="{Binding DisableMinimizeMaximizeWindows}"
                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                          ToolTip="Disable skip break"
                          >
                <ToggleButton.RenderTransform>
                    <ScaleTransform CenterX="20" CenterY="18" ScaleX=".6" ScaleY="0.6" />
                </ToggleButton.RenderTransform>
            </ToggleButton>
            <TextBlock Margin="0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"
                       FontSize="12"
                       Style="{StaticResource MaterialDesignOverlineTextBlock}"
                       Text="Disable minimize/maximize windows"
                       />
        </StackPanel>
    </StackPanel>

</UserControl>
