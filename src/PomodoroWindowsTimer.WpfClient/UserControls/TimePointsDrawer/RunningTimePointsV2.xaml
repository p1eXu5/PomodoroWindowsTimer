<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer.RunningTimePointsV2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:TimePointListModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.TimePointListModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Shared"
             TextElement.Foreground="{StaticResource MaterialDesignBody}"
             d:DataContext="{d:DesignInstance Type=TimePointListModel:Bindings,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             >
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top">
            <Button HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                    CommandParameter="{x:Static Dock.Left}"
                    Content="{materialDesign:PackIcon ArrowLeft}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    />
            <TextBlock Margin="10,16,0,16"
                       HorizontalAlignment="Center"
                       Style="{StaticResource MaterialDesignButtonTextBlock}"
                       Text="TIME POINTS"
                       />
        </Grid>

        <!--  PlayerModel flags  -->
        <local:PlayerSettings DataContext="{Binding Player}"
                              DockPanel.Dock="Bottom"
                              />

        <!--  time points  -->
        <shared:TimePointList HorizontalAlignment="Stretch"
                              DataContext="{Binding TimePoints}"
                              SearchToolbarVisibility="Collapsed"
                              TimePointListBoxItemTemplate="{StaticResource dt_PlaylistTimePointV2}"
                              TimePointListBoxScrollBarVisibility="Auto"
                              />
    </DockPanel>
</UserControl>
