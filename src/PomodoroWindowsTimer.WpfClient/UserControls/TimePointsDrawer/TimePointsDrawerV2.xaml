<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer.TimePointsDrawerV2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.TimePointsDrawer"
             xmlns:mainModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.MainModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             d:DataContext="{d:DesignInstance Type=mainModel:IBindings, IsDesignTimeCreatable=False}"
             MinWidth="350"
             HorizontalAlignment="Stretch"
             d:DesignHeight="250"
             d:DesignWidth="300"
             TextElement.Foreground="{StaticResource MaterialDesignBody}"
             mc:Ignorable="d"
             >
    <!--  content  -->
    <materialDesign:DrawerHost x:Name="m_DrawerHost"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               BorderThickness="0"
                               IsLeftDrawerOpen="{Binding IsTimePointsShown}"
                               LeftDrawerBackground="Transparent"
                               LeftDrawerCloseOnClickAway="False"
                               OpenMode="Standard"
                               >
        <!--  TimePointsDrawer  -->
        <materialDesign:DrawerHost.LeftDrawerContent>
            <local:TimePointsGenerator DataContext="{Binding TimePointGenerator}"
                                       Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                      AncestorType=UserControl},
                                                       Path=ActualWidth}"
                                       />
        </materialDesign:DrawerHost.LeftDrawerContent>
        <DockPanel LastChildFill="True">
            <Button Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                    CommandParameter="{x:Static Dock.Left}"
                    Content="{materialDesign:PackIcon ArrowLeft}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    />

        </DockPanel>
    </materialDesign:DrawerHost>
</UserControl>