<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Lcd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:digitPanel="clr-namespace:p1eXu5.Wpf.DigitPanel;assembly=p1eXu5.Wpf.DigitPanel"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sel="clr-namespace:PomodoroWindowsTimer.WpfClient"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             >
    <materialDesign:DrawerHost x:Name="DrawerHost"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               BorderThickness="0"
                               BottomDrawerBackground="{DynamicResource MaterialDesign.Brush.Secondary.Light}"
                               BottomDrawerCornerRadius="20 20 0 0"
                               IsLeftDrawerOpen="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                         AncestorType=Window},
                                                          Path=(local:UIAssistant.AreRunningTimePointsShown)}"
                               IsRightDrawerOpen="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                          AncestorType=Window},
                                                           Path=(local:UIAssistant.IsTimePointsGeneratorShown)}"
                               LeftDrawerBackground="Transparent"
                               RightDrawerBackground="Transparent"
                               OpenMode="Standard"
                               >
        <materialDesign:DrawerHost.LeftDrawerContent>
            <local:RunningTimePoints Width="350"
                                     DataContext="{Binding}"
                                     />
        </materialDesign:DrawerHost.LeftDrawerContent>

        <!--  time points generator  -->
        <!--
        <materialDesign:DrawerHost.RightDrawerContent>
            <local:TimePointsGenerator DataContext="{Binding TimePointsGeneratorModel}" />
        </materialDesign:DrawerHost.RightDrawerContent>-->

        <DockPanel Margin="10,0,10,0"
                   LastChildFill="True"
                   >
            <local:MainMenu DockPanel.Dock="Top"
                            DataContext="{Binding}"
                            />

            <materialDesign:ColorZone VerticalAlignment="Center"
                                      Background="Transparent"
                                      >
                <!--  Content  -->
                <Grid Margin="0,0,0,20">
                    <Grid.Resources>
                        <DataTemplate x:Key="gp_Green">
                            <local:Timer DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                              AncestorType=Control},
                                                               Path=DataContext}"
                                         DigitBackground="#004000"
                                         Foreground="#00FF00"
                                         />
                        </DataTemplate>

                        <DataTemplate x:Key="gp_Red">
                            <local:Timer DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                              AncestorType=Control},
                                                               Path=DataContext}"
                                         DigitBackground="#400000"
                                         Foreground="#FF0000"
                                         />
                        </DataTemplate>

                        <sel:DigitPanelTemplateSelector x:Key="dts_DigitPanel" />
                    </Grid.Resources>

                    <!--  Digit Panel  -->
                    <ContentControl x:Name="m_DigitPanel"
                                    DockPanel.Dock="Top"
                                    HorizontalAlignment="Center"
                                    DataContext="{Binding}"
                                    Content="{Binding IsBreak}"
                                    ContentTemplateSelector="{StaticResource dts_DigitPanel}"
                                    />


                </Grid>
            </materialDesign:ColorZone>
        </DockPanel>
    </materialDesign:DrawerHost>
</UserControl>
