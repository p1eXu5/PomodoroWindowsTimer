<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.WorkSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
             mc:Ignorable="d"
             >
    <DockPanel>
        <TextBlock Text="{Binding Title,
                                  FallbackValue='Title'}"
                   FontSize="18"
                   Style="{StaticResource MaterialDesignButtonTextBlock}"
                   />
        
        <ContentControl Content="{Binding Stage}" ContentTemplateSelector="{StaticResource sel_WorkStage}" />
    </DockPanel>
</UserControl>
