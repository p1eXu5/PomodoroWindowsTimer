<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Works.WorksSearchFilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Works"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:WorkListModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.WorkListModel;assembly=PomodoroWindowsTimer.ElmishApp"
             d:DataContext="{d:DesignInstance Type=WorkListModel:Bindings, IsDesignTimeCreatable=False}"
             DataContext="{Binding WorkListModel}"
             d:DesignHeight="40"
             d:DesignWidth="300"
             mc:Ignorable="d"
             >
    <!--  TODO: get scrollbar width to set right margin  -->
    <Grid Margin="0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                              SharedSizeGroup="gr_WorkName"
                              />
            <ColumnDefinition Width="50"
                              SharedSizeGroup="gr_Button"
                              />
        </Grid.ColumnDefinitions>

        <!--  search  -->
        <Grid Grid.Column="0">
            <materialDesign:PackIcon VerticalAlignment="Center"
                                     Kind="Magnify"
                                     Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                                     />
            <TextBox x:Name="m_Search"
                     MinWidth="230"
                     Margin="0,0,2,0"
                     Padding="25,0,0,5"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Bottom"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     TextChanged="SearchTextBox_TextChanged"
                     />
        </Grid>

        <!--  filter  -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    >
            <TextBox x:Name="m_Count"
                     ToolTip="Filters works by the number of days from the current day to the time of last event or last update"
                     Width="45"
                     Margin="2,0,0,0"
                     Padding="0,0,0,5"
                     VerticalAlignment="Bottom"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     TextAlignment="Center"
                     TextChanged="CountTextBox_TextChanged"
                     Text="{Binding LastDayCount,
                                    UpdateSourceTrigger=PropertyChanged}"
                     />
        </StackPanel>
    </Grid>
</UserControl>
