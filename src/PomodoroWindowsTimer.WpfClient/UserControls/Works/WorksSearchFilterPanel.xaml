<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Works.WorksSearchFilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:WorkListModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.WorkListModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Works"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="m_WorksSearchFilterPanelRoot"
             d:DataContext="{d:DesignInstance Type=WorkListModel:IBindings,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="40"
             d:DesignWidth="350"
             mc:Ignorable="d"
             >
    <!--  TODO: get scrollbar width to set right margin  -->
    <Grid Margin="0,5"
          HorizontalAlignment="Stretch"
          >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

        <!--  search  -->
        <Grid Grid.Column="0">
            <materialDesign:PackIcon VerticalAlignment="Center"
                                     Foreground="{StaticResource MaterialDesign.Brush.Primary}"
                                     Kind="Magnify"
                                     />
            <TextBox MinWidth="230"
                     Margin="0,0,2,0"
                     Padding="25,0,0,5"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Bottom"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     TextChanged="SearchTextBox_TextChanged"
                     />
        </Grid>

        <!--  count filter  -->
        <TextBox Grid.Column="1"
                 Width="45"
                 Margin="2,0,0,0"
                 Padding="0,0,0,5"
                 VerticalAlignment="Bottom"
                 materialDesign:TextFieldAssist.HasClearButton="True"
                 Text="{Binding LastDayCount,
                                UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 TextChanged="CountTextBox_TextChanged"
                 ToolTip="Filters works by the number of days from the current day to the time of last event or last update"
                 />
    </Grid>
</UserControl>
