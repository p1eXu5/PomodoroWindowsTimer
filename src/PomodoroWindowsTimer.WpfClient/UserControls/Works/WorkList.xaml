<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Works.WorkList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:WorkListModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.WorkListModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:conv="clr-namespace:PomodoroWindowsTimer.WpfClient.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Works"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="m_Root"
             DataContext="{Binding WorkListModel}"
             d:DataContext="{d:DesignInstance Type=WorkListModel:Bindings, IsDesignTimeCreatable=False}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d"
             >
    <UserControl.Resources />
    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Vertical"
                    Visibility="{Binding ElementName=m_Root, Path=DataContext.HasSelectedWork, Converter={StaticResource BooleanToVisibilityConverter}}"
                    >

            <TextBlock DockPanel.Dock="Top"
                       Margin="0,21.5,0,10"
                       Text="SELECTED WORK"
                       TextAlignment="Center"
                       Foreground="#AAAAAA"
                       />
            <local:SelectedWork DockPanel.Dock="Top"
                                DataContext="{Binding SelectedWorkModel}"
                                Margin="0,10,0,0"
                                VerticalAlignment="Center"
                                IsSelected="True"
                                />
        </StackPanel>

        <TextBlock DockPanel.Dock="Top"
                   Margin="0,21.5,0,10"
                   Text="SELECT WORK"
                   TextAlignment="Center"
                   Visibility="{Binding ElementName=m_Root, Path=DataContext.HasSelectedWork, Converter={StaticResource InverseBoolToVisConverter}}"
                   Foreground="#AAAAAA"
                   />

        <!--<TextBlock DockPanel.Dock="Top"
                   Margin="0,40,0,10"
                   Text="WORK LIST"
                   TextAlignment="Center"
                   Foreground="#AAAAAA"
                   />-->
        <Grid DockPanel.Dock="Top"
              Margin="20,10"
              VerticalAlignment="Top"
              >
            <materialDesign:PackIcon VerticalAlignment="Center"
                                     Kind="Magnify"
                                     Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                     />
            <TextBox MinWidth="200"
                     Margin="0,5"
                     Padding="25,0,0,5"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Bottom"
                     />
        </Grid>

        <Border Margin="0,0,0,1"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                BorderThickness="0"
                >
            <ItemsControl Margin="0"
                          HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Center"
                          ItemsSource="{Binding WorkModelList}"
                          >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:SelectableWork />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <!--<ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>-->
            </ItemsControl>

        </Border>
    </DockPanel>
</UserControl>
