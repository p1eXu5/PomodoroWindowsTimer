<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Works.SelectableWork"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:WorkModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.WorkModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:conv="clr-namespace:PomodoroWindowsTimer.WpfClient.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Works"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="m_SelectableWorkRoot"
             Height="Auto"
             Padding="0,1"
             VerticalAlignment="Center"
             d:DataContext="{d:DesignInstance Type=WorkModel:Bindings,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="54"
             d:DesignWidth="300"
             Foreground="{StaticResource MaterialDesign.Brush.Primary}"
             MouseRightButtonDown="m_Root_MouseDown"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <conv:NoNumberConverter x:Key="conv_NoNumberConverter" />
        <local:IsWorkSelectedMultiConverter x:Key="conv_IsWorkSelected" />
    </UserControl.Resources>

    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource conv_IsWorkSelected}">
                            <Binding Path="Id" />
                            <Binding Path="DataContext.SelectedWorkId"
                                     RelativeSource="{RelativeSource AncestorType=ItemsControl}"
                                     />
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Foreground" Value="{StaticResource MaterialDesign.Brush.Foreground}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>

    <Grid x:Name="m_Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

        <Button x:Name="m_SelectButton"
                Grid.Column="0"
                Height="Auto"
                Margin="0"
                Padding="0"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Stretch"
                d:Height="52"
                materialDesign:ButtonAssist.CornerRadius="0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding SelectCommand}"
                >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0"
                           Width="1"
                           VerticalAlignment="Stretch"
                           Fill="{Binding ElementName=m_SelectableWorkRoot,
                                          Path=Foreground}"
                           />
                <local:WorkCard x:Name="m_WorkCard"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                DataContext="{Binding}"
                                Foreground="{Binding ElementName=m_SelectableWorkRoot,
                                                     Path=Foreground}"
                                />
            </Grid>
        </Button>

        <Button x:Name="m_SelectableWorkEditButton"
                Grid.Column="1"
                Height="{Binding ElementName=m_SelectButton,
                                 Path=ActualHeight}"
                BorderBrush="{Binding ElementName=m_SelectableWorkRoot,
                                      Path=Foreground}"
                Command="{Binding EditCommand}"
                Content="{materialDesign:PackIcon Pencil}"
                Foreground="{Binding ElementName=m_SelectableWorkRoot,
                                     Path=Foreground}"
                Style="{StaticResource st_WorkEditButton}"
                />
    </Grid>
</UserControl>
