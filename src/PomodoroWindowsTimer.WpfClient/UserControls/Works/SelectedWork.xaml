<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Works.SelectedWork"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:WorkModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.WorkModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:conv="clr-namespace:PomodoroWindowsTimer.WpfClient.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Works"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="m_SelectedWorkRoot"
             Height="Auto"
             d:DataContext="{d:DesignInstance Type=WorkModel:Bindings,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="52"
             d:DesignWidth="300"
             Foreground="{StaticResource MaterialDesign.Brush.Foreground}"
             MouseRightButtonDown="m_Root_MouseDown"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <conv:NoNumberConverter x:Key="conv_NoNumberConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="0"
                   Width="1"
                   VerticalAlignment="Stretch"
                   Fill="{Binding ElementName=m_SelectedWorkRoot, Path=Foreground}"
                   />
        <local:WorkCard x:Name="m_WorkCard"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Foreground="{Binding ElementName=m_SelectedWorkRoot, Path=Foreground}"
                        />

        <Button x:Name="m_SelectedWorkEditButton"
                Grid.Column="2"
                Height="{Binding ElementName=m_WorkCard, Path=ActualHeight}"
                BorderBrush="{Binding ElementName=m_SelectedWorkRoot, Path=Foreground}"
                Command="{Binding EditCommand}"
                Content="{materialDesign:PackIcon Pencil}"
                Foreground="{Binding ElementName=m_SelectedWorkRoot, Path=Foreground}"
                Style="{StaticResource st_WorkEditButton}"
                />
    </Grid>
</UserControl>
