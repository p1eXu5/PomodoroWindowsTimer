<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Works.StatisticTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:appDialogModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.AppDialogModel;assembly=PomodoroWindowsTimer.ElmishApp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Shared"
             MinWidth="800"
             MinHeight="450"
             d:DataContext="{d:DesignInstance Type=appDialogModel:Bindings, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             >

    <!--<materialDesign:DialogHost.DialogContent>
            <shared:PwtDatePicker />
        </materialDesign:DialogHost.DialogContent>-->
    <DockPanel xmlns:workStatisticListModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.WorkStatisticListModel;assembly=PomodoroWindowsTimer.ElmishApp"
               DataContext="{Binding WorkStatisticsDialog}"
               d:DataContext="{d:DesignInstance Type=workStatisticListModel:Bindings, IsDesignTimeCreatable=False}"
               >
        <!--<DatePicker DockPanel.Dock="Top"
                        MinWidth="200"
                        />-->
        <!--<Button DockPanel.Dock="Top"
                    ToolTip="Save"
                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                    Padding="10,5"
                    VerticalAlignment="Center"
                    >
                <Button.CommandParameter>
                    <shared:PwtDatePicker />
                </Button.CommandParameter>
                <Behaviors:Interaction.Behaviors>
                    <behaviors:DialogEventHandlerBehavior OkCommand="{Binding SetStartDateCommand}" />
                </Behaviors:Interaction.Behaviors>
                <materialDesign:PackIcon Width="18"
                                         Kind="Calendar"
                                         />
            </Button>-->

        <ToolBarTray DockPanel.Dock="Top" DataContext="{Binding}">
            <ToolBar ClipToBounds="False" Style="{StaticResource MaterialDesignToolBar}">
                <CheckBox x:Name="m_ByDayCheckBox"
                          Margin="8,3,16,3"
                          Content="By Day"
                          />
                <Border VerticalAlignment="Center"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        Background="#333333"
                        >
                    <DatePicker Width="150"
                                Height="25"
                                Padding="5,0"
                                VerticalContentAlignment="Center"
                                materialDesign:HintAssist.Hint="Start Date"
                                BorderThickness="0"
                                SelectedDate="{Binding StartDate, Converter={StaticResource conv_DateOnlyToDateTime}}"
                                />
                </Border>


                <Border Margin="18,1"
                        VerticalAlignment="Center"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        IsEnabled="{Binding ElementName=m_ByDayCheckBox, Path=IsChecked, Converter={StaticResource conv_InverseBooleanToVisibility}}"
                        Background="#333333"
                        >
                    <DatePicker Width="150"
                                Height="25"
                                Padding="5,0"
                                VerticalContentAlignment="Center"
                                materialDesign:HintAssist.Hint="End Date"
                                BorderThickness="0"
                                SelectedDate="{Binding EndDate, Converter={StaticResource conv_DateOnlyToDateTime}}"
                                />
                </Border>
            </ToolBar>
        </ToolBarTray>

        <materialDesign:Snackbar x:Name="m_ErrorMessageQueueSnackbar"
                                 DockPanel.Dock="Bottom"
                                 HorizontalAlignment="Stretch"
                                 ActionButtonStyle="{StaticResource MaterialDesignSnackbarActionDarkButton}"
                                 MessageQueue="{Binding ErrorMessageQueue}"
                                 />
        <StackPanel DockPanel.Dock="Bottom"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    >
            <Button DockPanel.Dock="Bottom"
                    Content="CLOSE"
                    Style="{StaticResource PomodoroOkDialogButton}"
                    />
        </StackPanel>

        <Grid>
            <StackPanel Orientation="Vertical">
                <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="All"
                          IsReadOnly="False"
                          ItemsSource="{Binding WorkStatistics}"
                          SelectionMode="Extended"
                          SelectionUnit="CellOrRowHeader"
                          >
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding WorkId}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            Header="ID"
                                            />

                        <DataGridTextColumn Binding="{Binding WorkNumber}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            Header="Number"
                                            />

                        <DataGridTextColumn Binding="{Binding WorkTitle}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            Header="Title"
                                            />

                        <DataGridTextColumn Binding="{Binding StartPeriod}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            Header="Start"
                                            SortDirection="Descending"
                                            />

                        <DataGridTextColumn Binding="{Binding EndPeriod}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            Header="End"
                                            />

                        <DataGridTextColumn x:Name="m_OverallTimeColumn"
                                            Binding="{Binding OverallTime}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            Header="Overall Time"
                                            />

                        <DataGridTextColumn x:Name="m_WorkTimeColumn"
                                            Binding="{Binding WorkTime}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            Header="Work Time"
                                            />

                        <DataGridTextColumn x:Name="m_BreakTimeColumn"
                                            Binding="{Binding BreakTime}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            Header="Break Time"
                                            />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock Width="{Binding ElementName=m_OverallTimeColumn, Path=ActualWidth}"
                               Padding="16,10"
                               FontWeight="Bold"
                               Text="{Binding OverallTotalTime}"
                               TextAlignment="Left"
                               />
                    <TextBlock Width="{Binding ElementName=m_WorkTimeColumn, Path=ActualWidth}"
                               Padding="16,10"
                               FontWeight="Bold"
                               Text="{Binding WorkTotalTime}"
                               TextAlignment="Left"
                               />
                    <TextBlock Width="{Binding ElementName=m_BreakTimeColumn, Path=ActualWidth}"
                               Padding="16,10"
                               FontWeight="Bold"
                               Text="{Binding BreakTotalTime}"
                               TextAlignment="Left"
                               />
                </StackPanel>
            </StackPanel>
            <shared:Spinner Visibility="{Binding WorkStatisticsDeff, Converter={StaticResource conv_AsyncDeferredToVisicbility}}" />
        </Grid>
    </DockPanel>
</UserControl>
