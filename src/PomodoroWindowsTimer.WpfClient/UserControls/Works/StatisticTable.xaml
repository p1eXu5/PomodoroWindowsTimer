<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Works.StatisticTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shared="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Shared"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:dialogVm="clr-namespace:PomodoroWindowsTimer.ElmishApp.AppDialogModel;assembly=PomodoroWindowsTimer.ElmishApp"
             Width="800"
             Height="450"
             d:DataContext="{d:DesignInstance Type=dialogVm:Bindings, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             >
    <materialDesign:DialogHost VerticalAlignment="Stretch"
                               CloseOnClickAway="False"
                               DialogTheme="Inherit"
                               OverlayBackground="{DynamicResource PrimaryHueDarkBrush}"
                               Placement="Center"
                               SnackbarMessageQueue="{Binding ElementName=m_ErrorMessageQueueSnackbar,
                                                              Path=MessageQueue}"
                               DataContext="{Binding WorkStatisticsDialog}"
                               >
        <DockPanel xmlns:workStatisticListModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.WorkStatisticListModel;assembly=PomodoroWindowsTimer.ElmishApp"
                   d:DataContext="{d:DesignInstance Type=workStatisticListModel:Bindings, IsDesignTimeCreatable=False}"
                   >
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar ClipToBounds="False"
                         Style="{StaticResource MaterialDesignToolBar}"
                         >
                    <!--<DatePicker Width="100"
                            materialDesign:HintAssist.Hint="Pick Date"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            />-->
                    <CheckBox Margin="8,3,16,3"
                              Content="By Day"
                              />
                    <Border Padding="5,3"
                            VerticalAlignment="Center"
                            Background="#333333"
                            BorderBrush="#555555"
                            BorderThickness="1"
                            >
                        <TextBlock Width="100"
                                   VerticalAlignment="Center"
                                   Text="January 12th, 2024"
                                   Style="{StaticResource MaterialDesignBodySmallTextBlock}"
                                   TextAlignment="Right"
                                   />
                    </Border>
                    <Button Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                            Padding="10,5"
                            VerticalAlignment="Center"
                            ToolTip="Save"
                            >
                        <Button.CommandParameter>
                            <shared:PwtDatePicker DataContext="{Binding StartDate}" />
                        </Button.CommandParameter>
                        <materialDesign:PackIcon Width="18"
                                                 Kind="Calendar"
                                                 />
                    </Button>
                    <TextBlock VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBodySmallTextBlock}"
                               TextAlignment="Right"
                               >
                        <Run Text=" - " />
                    </TextBlock>
                    <Border Margin="10,5,0,5"
                            Padding="5,3"
                            VerticalAlignment="Center"
                            Background="#333333"
                            BorderBrush="#555555"
                            BorderThickness="1"
                            >
                        <TextBlock Width="100"
                                   VerticalAlignment="Center"
                                   Text="January 12th, 2024"
                                   Style="{StaticResource MaterialDesignBodySmallTextBlock}"
                                   TextAlignment="Right"
                                   />
                    </Border>
                    <Button Padding="10,5"
                            VerticalAlignment="Center"
                            ToolTip="Save"
                            >
                        <Button.CommandParameter>
                            <shared:PwtDatePicker DataContext="{Binding EndDate}" />
                        </Button.CommandParameter>
                        <materialDesign:PackIcon Width="18"
                                                 Kind="Calendar"
                                                 />
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <materialDesign:Snackbar x:Name="m_ErrorMessageQueueSnackbar"
                                     DockPanel.Dock="Bottom"
                                     HorizontalAlignment="Stretch"
                                     ActionButtonStyle="{StaticResource MaterialDesignSnackbarActionDarkButton}"
                                     MessageQueue="{Binding ErrorMessageQueue}"
                                     />
            <StackPanel DockPanel.Dock="Bottom"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        >
                <Button DockPanel.Dock="Bottom"
                        Command="{Binding CloseCommand}"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Content="CLOSE"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        IsCancel="True"
                        />
            </StackPanel>

            <Grid>
                <DataGrid CanUserAddRows="False"
                          ItemsSource="{Binding WorkStatistics}"
                          SelectionMode="Extended"
                          SelectionUnit="Cell"
                          />
                <shared:Spinner Visibility="{Binding WorkStatisticsDeff, Converter={StaticResource conv_AsyncDeferredToVisicbility}}" />
            </Grid>
        </DockPanel>
    </materialDesign:DialogHost>
</UserControl>
