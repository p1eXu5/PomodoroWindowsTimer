<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Settings.SkipOrApplyMissingTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:PomodoroWindowsTimer.WpfClient.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="Auto"
             MaxWidth="500"
             Foreground="{StaticResource MaterialDesignBody}"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <conv:NoNumberConverter x:Key="conv_NoNumberConverter" />
    </UserControl.Resources>
    <StackPanel Margin="10"
                VerticalAlignment="Top"
                Orientation="Vertical"
                >

        <TextBlock HorizontalAlignment="Center"
                   FontSize="20"
                   Text="SKIP OR APPLY TIME"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   />
        <TextBlock Margin="10,24,10,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   materialDesign:HintAssist.Hint="Number"
                   FontSize="11"
                   FontWeight="Normal"
                   Text="{Binding Number,
                                  Converter={StaticResource conv_NoNumberConverter},
                                  FallbackValue='NO NUMBER'}"
                   />
        <TextBlock Margin="10,5"
                   VerticalAlignment="Top"
                   materialDesign:HintAssist.Hint="Title"
                   FontSize="16"
                   FontWeight="Normal"
                   Text="{Binding Title,
                                  FallbackValue='[Dev-001] Lorem ipsum dolor sit amet, consectetur adipiscing elit'}"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="Wrap"
                   ToolTip="{Binding Title}"
                   />
        <TextBlock Margin="0,20"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   Text="{Binding Difference,
                                  Converter={StaticResource conv_TimeSpanToMinutes},
                                  FallbackValue='20 mimutes'}"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   />
        <StackPanel HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    >
            <Button DockPanel.Dock="Bottom"
                    Command="{Binding ApplyAsBreakAndCloseCommand}"
                    Content="AS BREAK"
                    Style="{StaticResource PomodoroDialogButton}"
                    Visibility="{Binding IsBreakKind,
                                         Converter={StaticResource conv_BooleanToVisibility}}"
                    />

            <Button DockPanel.Dock="Bottom"
                    Command="{Binding ApplyAsWorkAndCloseCommand}"
                    Content="AS WORK"
                    Style="{StaticResource PomodoroDialogButton}"
                    Visibility="{Binding IsWorkKind,
                                         Converter={StaticResource conv_BooleanToVisibility}}"
                    />

            <Button DockPanel.Dock="Bottom"
                    Command="{Binding CloseCommand}"
                    Content="SKIP"
                    Style="{StaticResource PomodoroDialogButton}"
                    />
        </StackPanel>

        <CheckBox Margin="0,10,0,0"
                  HorizontalAlignment="Center"
                  Content="Remember my choice"
                  IsChecked="{Binding RememberChoice}"
                  Visibility="Collapsed"
                  />
    </StackPanel>
</UserControl>
