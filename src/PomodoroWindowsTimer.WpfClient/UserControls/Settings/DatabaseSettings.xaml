<UserControl x:Class="PomodoroWindowsTimer.WpfClient.UserControls.Settings.DatabaseSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:DatabaseSettingsModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.DatabaseSettingsModel;assembly=PomodoroWindowsTimer.ElmishApp"
             d:DataContext="{d:DesignInstance Type=DatabaseSettingsModel:Bindings, IsDesignTimeCreatable=False}"
             Width="450"
             Height="200"
             Foreground="{StaticResource MaterialDesignBody}"
             mc:Ignorable="d"
             >
    <StackPanel Margin="10"
                VerticalAlignment="Center"
                Orientation="Vertical"
                >
        <StackPanel HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    >
            <TextBox Width="350"
                     Margin="0"
                     HorizontalAlignment="Center"
                     materialDesign:HintAssist.Hint="Data Source"
                     Text="{Binding Database}"
                     TextWrapping="Wrap"
                     TextAlignment="Left"
                     MinLines="1"
                     />
            <Button Command="{Binding SelectDatabaseFileCommand}"
                    Content="{materialDesign:PackIcon FolderOpenOutline}"
                    />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    >
            <Button DockPanel.Dock="Bottom"
                    Command="{Binding ApplyCommand}"
                    Content="APPLY"
                    Style="{StaticResource PomodoroOkDialogButton}"
                    />

            <Button DockPanel.Dock="Bottom"
                    Command="{Binding CancelCommand}"
                    Content="CANCEL"
                    Style="{StaticResource PomodoroCancelDialogButton}"
                    />
        </StackPanel>
    </StackPanel>
</UserControl>
