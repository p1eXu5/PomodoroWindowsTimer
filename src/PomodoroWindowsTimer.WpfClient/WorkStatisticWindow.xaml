<Window x:Class="PomodoroWindowsTimer.WpfClient.WorkStatisticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:StatisticMainModel="clr-namespace:PomodoroWindowsTimer.ElmishApp.StatisticMainModel;assembly=PomodoroWindowsTimer.ElmishApp"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:workStatistic="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Works.Statistic"
        xmlns:works="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Works"
        x:Name="m_WorkStatisticWindowRoot"
        Title="WorkStatisticWindow"
        Width="1600"
        Height="800"
        TextElement.Foreground="{StaticResource MaterialDesign.Brush.Foreground}"
        d:DataContext="{d:DesignInstance Type=StatisticMainModel:Bindings,
                                         IsDesignTimeCreatable=False}"
        Background="#1E1E1E"
        ResizeMode="CanResize"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        >
    <Behaviors:Interaction.Triggers>
        <Behaviors:EventTrigger EventName="Closing"
                                SourceObject="{Binding ElementName=m_WorkStatisticWindowRoot}"
                                >
            <Behaviors:InvokeCommandAction Command="{Binding CloseCommand}" />
        </Behaviors:EventTrigger>
    </Behaviors:Interaction.Triggers>
    <materialDesign:DialogHost x:Name="m_WorkStatisticWindowDialogHost"
                               CloseOnClickAway="True"
                               DialogTheme="Inherit"
                               Identifier="WorkStatisticWindowDialogHost"
                               SnackbarMessageQueue="{Binding ElementName=m_ErrorMessageQueueSnackbar,
                                                              Path=MessageQueue}"
                               >
        <DockPanel>
            <materialDesign:Snackbar x:Name="m_ErrorMessageQueueSnackbar"
                                     DockPanel.Dock="Bottom"
                                     HorizontalAlignment="Stretch"
                                     ActionButtonStyle="{StaticResource MaterialDesignSnackbarActionDarkButton}"
                                     MessageQueue="{Binding ErrorMessageQueue}"
                                     />

            <TabControl materialDesign:ColorZoneAssist.Background="{StaticResource MaterialDesign.Brush.Primary.Dark.Foreground}"
                        SelectedIndex="{Binding SelectedTabInd,
                                                Mode=OneWayToSource}"
                        >
                <TabItem Header="Statistics">
                    <workStatistic:DailyStatisticTableList Margin="5,0,0,0"
                                                           DataContext="{Binding DailyStatistics}"
                                                           />
                </TabItem>
                <TabItem Header="Works">
                    <!--
                        TODO: WorkList loads works slowly, it can be tested here
                        
                        1. Try to create simple list box for works
                        2. Try to create simple list view for works
                    -->
                    <works:WorkTable x:Name="m_WorkTable"
                                     Margin="5"
                                     DataContext="{Binding WorkList}"
                                     />
                </TabItem>
            </TabControl>
        </DockPanel>
    </materialDesign:DialogHost>
</Window>
