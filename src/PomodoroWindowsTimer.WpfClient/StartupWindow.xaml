<Window x:Class="PomodoroWindowsTimer.WpfClient.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PomodoroWindowsTimer.WpfClient"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pwt="clr-namespace:PomodoroWindowsTimer.Wpf;assembly=PomodoroWindowsTimer.Wpf"
        xmlns:shared="clr-namespace:PomodoroWindowsTimer.WpfClient.UserControls.Shared"
        Title="StartupWindow"
        Width="498"
        Height="200"
        TextElement.FontSize="13"
        TextElement.FontWeight="Regular"
        TextElement.Foreground="{StaticResource MaterialDesign.Brush.Foreground}"
        Background="Black"
        Closing="Window_Closing"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        mc:Ignorable="d"
        >
    <pwt:GlossOnBase BeamOpacity="0.15"
                     BeamVisibility="Visible"
                     >
        <Grid>
            <shared:DatabaseSelector x:Name="m_DatabaseSelector"
                                     Margin="10"
                                     Foreground="{StaticResource MaterialDesign.Brush.Foreground}"
                                     ShowCloseButton="false"
                                     Visibility="Collapsed"
                                     />

            <pwt:BlackMirrorSpinner x:Name="m_Spinner"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#55000000"
                                    LabelVisibility="Visible"
                                    Radius="30"
                                    Text="Loading Pomodoro Windows Timer ..."
                                    />
            <DockPanel x:Name="m_ErrorGrid"
                       VerticalAlignment="Stretch"
                       Visibility="Collapsed"
                       >

                <Label DockPanel.Dock="Top"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="Red"
                       >
                    Error
                </Label>
                <Button DockPanel.Dock="Bottom"
                        HorizontalAlignment="Center"
                        Click="ErrorGridOkButtonClick"
                        Content="OK"
                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                        />
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="m_ErrorText"
                               Grid.Row="1"
                               Margin="5"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               />
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </pwt:GlossOnBase>
</Window>
