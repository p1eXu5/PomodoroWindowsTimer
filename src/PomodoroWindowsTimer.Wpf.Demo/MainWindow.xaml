                <TextBlock>Big Lcd</TextBlock>
            </pwt:Lcd>-->

            <!--<pwt:Beam x:Name="m_BottomBeam"
                      Width="900"
                      Height="40"
                      Margin="0,80,0,0"
                      />-->
            <pwt:Lcd Width="900"
                     Height="40"
                     Margin="0,80,0,0"
                     VerticalAlignment="Center"
                     Brightness="2"
                     CornerRadius="8"
                     Foreground="#00FF00"
                     TintLightColor="#00FF00"
                     >
                <TextBlock>Big Lcd</TextBlock>
            </pwt:Lcd>
            <pwt:BlackMirrorSpinner Radius="30" />
