<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PomodoroWindowsTimer.Wpf"
                    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/PomodoroWindowsTimer.Wpf;component/Themes/Converters.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <x:Array x:Key="a_GradientStops"
             Type="{x:Type GradientStop}"
             >
        <GradientStop Offset="0.38" Color="#00FFFFFF" />
        <GradientStop Offset="0.4" Color="#FFFFFFFF" />
        <GradientStop Offset="0.7" Color="#FFFFFFFF" />
        <GradientStop Offset="0.72" Color="#00FFFFFF" />
    </x:Array>

    <Style TargetType="{x:Type local:Beam}">
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Opacity" Value="0.35" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Beam}">
                    <Rectangle Width="{TemplateBinding Width}"
                               Height="{TemplateBinding Height}"
                               IsHitTestVisible="False"
                               Opacity="{TemplateBinding Opacity}"
                               RadiusX="4"
                               RadiusY="4"
                               >
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <LinearGradientBrush.GradientStops>
                                    <MultiBinding Converter="{StaticResource conv_MultiWidthToGradientStops}"
                                                  ConverterParameter="{StaticResource a_GradientStops}"
                                                  >
                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                 AncestorType=local:Beam,
                                                                                 AncestorLevel=1}"
                                                 Path="(local:GlossAssistant.BaseWidth)"
                                                 />
                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                 AncestorType=local:Beam,
                                                                                 AncestorLevel=1}"
                                                 Path="ActualWidth"
                                                 />
                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                 AncestorType=local:Beam,
                                                                                 AncestorLevel=1}"
                                                 Path="(local:GlossAssistant.OffsetX)"
                                                 />
                                    </MultiBinding>
                                    <!--<GradientStop Offset="0.38" Color="#00FFFFFF" />
                                    <GradientStop Offset="0.4" Color="#FFFFFFFF" />
                                    <GradientStop Offset="0.7" Color="#FFFFFFFF" />
                                    <GradientStop Offset="0.72" Color="#00FFFFFF" />-->
                                </LinearGradientBrush.GradientStops>

                                <LinearGradientBrush.Transform>
                                    <TransformGroup>
                                        <RotateTransform Angle="40"
                                                         CenterX="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                          AncestorType=local:Beam,
                                                                                                          AncestorLevel=1},
                                                                           Path=ActualWidth,
                                                                           Converter={StaticResource conv_Divider},
                                                                           ConverterParameter=2}"
                                                         CenterY="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                          AncestorType=local:Beam,
                                                                                                          AncestorLevel=1},
                                                                           Path=ActualHeight,
                                                                           Converter={StaticResource conv_Divider},
                                                                           ConverterParameter=2}"
                                                         />
                                        <!--<ScaleTransform CenterX="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                         AncestorType=local:Beam,
                                                                                                         AncestorLevel=1},
                                                                          Path=ActualWidth,
                                                                          Converter={StaticResource conv_Divider},
                                                                          ConverterParameter=2}"
                                                        CenterY="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                         AncestorType=local:Beam,
                                                                                                         AncestorLevel=1},
                                                                          Path=ActualHeight,
                                                                          Converter={StaticResource conv_Divider},
                                                                          ConverterParameter=2}"
                                                        >
                                            <ScaleTransform.ScaleX>
                                                <MultiBinding Converter="{StaticResource conv_Scale}">
                                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                             AncestorType=local:Beam,
                                                                                             AncestorLevel=1}"
                                                             Path="(local:GlossAssistant.BaseWidth)"
                                                             />
                                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                             AncestorType=local:Beam,
                                                                                             AncestorLevel=1}"
                                                             Path="ActualWidth"
                                                             />
                                                </MultiBinding>
                                            </ScaleTransform.ScaleX>
                                            <ScaleTransform.ScaleY>
                                                <MultiBinding Converter="{StaticResource conv_Scale}">
                                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                             AncestorType=local:Beam,
                                                                                             AncestorLevel=1}"
                                                             Path="(local:GlossAssistant.BaseHeight)"
                                                             />
                                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                             AncestorType=local:Beam,
                                                                                             AncestorLevel=1}"
                                                             Path="ActualHeight"
                                                             />
                                                </MultiBinding>
                                            </ScaleTransform.ScaleY>
                                        </ScaleTransform>
                                        <TranslateTransform X="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                       AncestorType=local:Beam,
                                                                                                       AncestorLevel=1},
                                                                        Path=(local:GlossAssistant.OffsetX)}"
                                                            Y="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                       AncestorType=local:Beam,
                                                                                                       AncestorLevel=1},
                                                                        Path=(local:GlossAssistant.OffsetY)}"
                                                            />-->
                                    </TransformGroup>
                                </LinearGradientBrush.Transform>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
