<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PomodoroWindowsTimer.Wpf"
                    >
    <Color x:Key="FilledColor">#BB9B9B9B</Color>
    <Color x:Key="UnfilledColor">#009B9B9B</Color>

    <Style TargetType="{x:Type local:BlackMirrorSpinner}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#BB9B9B9B" />
        <Setter Property="FillActive" Value="#BB9B9B9B" />
        <Setter Property="FillInactive" Value="#009B9B9B" />
        <Setter Property="StrokeActive" Value="#FFFFFFFF" />
        <Setter Property="StrokeInactive" Value="#00FFFFFF" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BlackMirrorSpinner}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="AnimationFigureN"
                                    BeginTime="00:00:00.0"
                                    RepeatBehavior="Forever"
                                    >
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_FigureN"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          >
                                <SplineColorKeyFrame KeyTime="00:00:00.0"
                                                     Value="{StaticResource FilledColor}"
                                                     />
                                <SplineColorKeyFrame KeyTime="00:00:01.6"
                                                     Value="{StaticResource UnfilledColor}"
                                                     />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="AnimationFigureNE"
                                    BeginTime="00:00:00.2"
                                    RepeatBehavior="Forever"
                                    >
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_FigureNE"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          >
                                <SplineColorKeyFrame KeyTime="00:00:00.0"
                                                     Value="{StaticResource FilledColor}"
                                                     />
                                <SplineColorKeyFrame KeyTime="00:00:01.6"
                                                     Value="{StaticResource UnfilledColor}"
                                                     />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="AnimationFigureE"
                                    BeginTime="00:00:00.4"
                                    RepeatBehavior="Forever"
                                    >
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_FigureE"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          >
                                <SplineColorKeyFrame KeyTime="00:00:00.0"
                                                     Value="{StaticResource FilledColor}"
                                                     />
                                <SplineColorKeyFrame KeyTime="00:00:01.6"
                                                     Value="{StaticResource UnfilledColor}"
                                                     />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="AnimationFigureSE"
                                    BeginTime="00:00:00.6"
                                    RepeatBehavior="Forever"
                                    >
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_FigureSE"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          >
                                <SplineColorKeyFrame KeyTime="00:00:00.0"
                                                     Value="{StaticResource FilledColor}"
                                                     />
                                <SplineColorKeyFrame KeyTime="00:00:01.6"
                                                     Value="{StaticResource UnfilledColor}"
                                                     />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="AnimationFigureS"
                                    BeginTime="00:00:00.8"
                                    RepeatBehavior="Forever"
                                    >
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_FigureS"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          >
                                <SplineColorKeyFrame KeyTime="00:00:00.0"
                                                     Value="{StaticResource FilledColor}"
                                                     />
                                <SplineColorKeyFrame KeyTime="00:00:01.6"
                                                     Value="{StaticResource UnfilledColor}"
                                                     />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="AnimationFigureSW"
                                    BeginTime="00:00:01.0"
                                    RepeatBehavior="Forever"
                                    >
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_FigureSW"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          >
                                <SplineColorKeyFrame KeyTime="00:00:00.0"
                                                     Value="{StaticResource FilledColor}"
                                                     />
                                <SplineColorKeyFrame KeyTime="00:00:01.6"
                                                     Value="{StaticResource UnfilledColor}"
                                                     />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="AnimationFigureW"
                                    BeginTime="00:00:01.2"
                                    RepeatBehavior="Forever"
                                    >
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_FigureW"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          >
                                <SplineColorKeyFrame KeyTime="00:00:00.0"
                                                     Value="{StaticResource FilledColor}"
                                                     />
                                <SplineColorKeyFrame KeyTime="00:00:01.6"
                                                     Value="{StaticResource UnfilledColor}"
                                                     />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="AnimationFigureNW"
                                    BeginTime="00:00:01.4"
                                    RepeatBehavior="Forever"
                                    >
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_FigureNW"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          >
                                <SplineColorKeyFrame KeyTime="00:00:00.0"
                                                     Value="{StaticResource FilledColor}"
                                                     />
                                <SplineColorKeyFrame KeyTime="00:00:01.6"
                                                     Value="{StaticResource UnfilledColor}"
                                                     />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </ControlTemplate.Resources>

                    <ControlTemplate.Triggers>
                        <!--  start-stop storyboards  -->
                        <Trigger Property="IsVisible" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="StoryboardN" Storyboard="{StaticResource AnimationFigureN}" />
                                <BeginStoryboard x:Name="StoryboardNE" Storyboard="{StaticResource AnimationFigureNE}" />
                                <BeginStoryboard x:Name="StoryboardE" Storyboard="{StaticResource AnimationFigureE}" />
                                <BeginStoryboard x:Name="StoryboardSE" Storyboard="{StaticResource AnimationFigureSE}" />
                                <BeginStoryboard x:Name="StoryboardS" Storyboard="{StaticResource AnimationFigureS}" />
                                <BeginStoryboard x:Name="StoryboardSW" Storyboard="{StaticResource AnimationFigureSW}" />
                                <BeginStoryboard x:Name="StoryboardW" Storyboard="{StaticResource AnimationFigureW}" />
                                <BeginStoryboard x:Name="StoryboardNW" Storyboard="{StaticResource AnimationFigureNW}" />
                            </Trigger.EnterActions>

                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="StoryboardN" />
                                <StopStoryboard BeginStoryboardName="StoryboardNE" />
                                <StopStoryboard BeginStoryboardName="StoryboardE" />
                                <StopStoryboard BeginStoryboardName="StoryboardSE" />
                                <StopStoryboard BeginStoryboardName="StoryboardS" />
                                <StopStoryboard BeginStoryboardName="StoryboardSW" />
                                <StopStoryboard BeginStoryboardName="StoryboardW" />
                                <StopStoryboard BeginStoryboardName="StoryboardNW" />
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>

                    <Grid Width="{TemplateBinding Width}"
                          Height="{TemplateBinding Height}"
                          MinWidth="{TemplateBinding MinWidth}"
                          MinHeight="{TemplateBinding MinHeight}"
                          HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalAlignment}"
                          Background="{TemplateBinding Background}"
                          >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.Resources>
                                <Style TargetType="Path">
                                    <!--<Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />-->
                                    <!--<Setter Property="Fill" Value="{TemplateBinding FillInactive}" />
                                    <Setter Property="Stroke" Value="{TemplateBinding StrokeInactive}" />-->
                                </Style>
                            </Grid.Resources>

                            <Path x:Name="PART_FigureN"
                                  Fill="{TemplateBinding FillInactive}"
                                  Stroke="{TemplateBinding StrokeInactive}"
                                  StrokeThickness="0"
                                  />
                            <Path x:Name="PART_FigureNE"
                                  Fill="{TemplateBinding FillInactive}"
                                  Stroke="{TemplateBinding StrokeInactive}"
                                  StrokeThickness="0"
                                  />
                            <Path x:Name="PART_FigureE"
                                  Fill="{TemplateBinding FillInactive}"
                                  Stroke="{TemplateBinding StrokeInactive}"
                                  />
                            <Path x:Name="PART_FigureSE"
                                  Fill="{TemplateBinding FillInactive}"
                                  Stroke="{TemplateBinding StrokeInactive}"
                                  />
                            <Path x:Name="PART_FigureS"
                                  Fill="{TemplateBinding FillInactive}"
                                  Stroke="{TemplateBinding StrokeInactive}"
                                  />
                            <Path x:Name="PART_FigureSW"
                                  Fill="{TemplateBinding FillInactive}"
                                  Stroke="{TemplateBinding StrokeInactive}"
                                  />
                            <Path x:Name="PART_FigureW"
                                  Fill="{TemplateBinding FillInactive}"
                                  Stroke="{TemplateBinding StrokeInactive}"
                                  />
                            <Path x:Name="PART_FigureNW"
                                  Fill="{TemplateBinding FillInactive}"
                                  Stroke="{TemplateBinding StrokeInactive}"
                                  />
                        </Grid>

                        <Label Grid.Row="1"
                               Content="{TemplateBinding Text}"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{TemplateBinding Foreground}"
                               Visibility="{TemplateBinding LabelVisibility}"
                               />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
